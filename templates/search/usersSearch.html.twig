{% extends 'base.html.twig' %}
{%  block title %}Users List{% endblock %}
{% block body %}
    <style>
        .btn-search{

            height: 50px;
            width:100px;
            background: -webkit-linear-gradient(right, #920513, #909284);
            background: -o-linear-gradient(right, #920513, #909284);
            background: -moz-linear-gradient(right, #920513, #909284);
            background: linear-gradient(right, #920513, #909284);
            border: none;
            color: snow;
            border-radius:25px ;
        }
        .btn-search:hover{
            background: -webkit-linear-gradient(left, #920513, #909284);
            background: -o-linear-gradient(left, #920513, #909284);
            background: -moz-linear-gradient(left, #920513, #909284);
            background: linear-gradient(left, #920513, #909284);
        }    .btn-search2{
            margin-left: 90%;
            height: 50px;
            width:100px;
            background: -webkit-linear-gradient(right, #909284, #6b6e67);
            background: -o-linear-gradient(right, #920513, #909284);
            background: -moz-linear-gradient(right, #920513, #909284);
            background: linear-gradient(right, #920513, #909284);
            border: none;
            color: snow;
            border-radius:15px ;
        }
        .btn-search2:hover{
            background: -webkit-linear-gradient(left, #909284, #6b6e67);
            background: -o-linear-gradient(left, #920513, #909284);
            background: -moz-linear-gradient(left, #920513, #909284);
            background: linear-gradient(left, #920513, #909284);
        }
    .header {
        background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)),url({{ asset('background_images/beach-blur-clouds-dawn-462030.jpg') }});
        background-size: cover;
        background-position: center;
        display: flex;
        height: 100%;
        min-height: 100vh;
        justify-content: center;
        align-items: center;
        font-family: sans-serif;
    }
        .table-dark{
            background: rgba(0,0,0,0.4);
        }
        img{
            border-radius: 60px;
            position: center;

        }
        h2{
            color: rgba(255,255,255,01);
            text-shadow: 0 1px 0 #ccc,
            0 2px 0 #c9c9c9,
            0 3px 0 #bbb,
            0 4px 0 #b9b9b9,
            0 5px 0 #aaa,
            0 6px 1px rgba(0,0,0,.1),
            0 0 5px rgba(0,0,0,.1),
            0 1px 3px rgba(0,0,0,.3),
            0 3px 5px rgba(0,0,0,.2),
            0 5px 10px rgba(0,0,0,.25),
            0 10px 10px rgba(0,0,0,.2),
            0 20px 20px rgba(0,0,0,.15);
            padding-left: 10%;
            text-decoration-color: #f1f2f3;
            margin-bottom:10px ;
            font-size:45px;
            letter-spacing: 3px;

        }
        td{
            font-family: 'MuseoModerno', cursive;
            text-shadow: 0 2px 0 #000 ;
            font-weight: bold;
            padding-left: 4px;
        }
        p{
            color: whitesmoke;
            padding-left: 30%;
            margin-bottom:10px ;
            font-size:30px;
            letter-spacing: 2px;

        }
        th{
            padding-left: 4px;
            color: snow;
            font-size: 20px;
            text-shadow: 0 3px 0 #000 ;
            font-family: 'MuseoModerno', cursive;
        }


        .search-pagination{
            position: center;
            margin-left: 35%;
            color: black;

        }
    </style>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <div class="header">
            <div class="container">

                <h2>List Of  Users</h2>

        <p> This is the result of your search</p>
                <a href="{{ path('search') }}"><button class="btn-search2 " type="button">
                        <i class="material-icons" style="font-size:36px">search</i> </button></a>


                <table class="table table-striped  table-dark table table-hover">
            <thead class="table-dark">
            <tr>
                <th>Photo</th>
                <th>UserName</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>bio</th>
                <th>Profile</th>
            </tr>
            </thead>
            <tbody >
            <tr>
                {%  for person in users %}
            <tr>
                <th scope="row"><img src="{{ person.profilePicture }}" height="120px" width="120px" alt=""></th>
                <td >{{ person.nom }}</td>
                <td>{{ person.nom }}</td>
                <td>{{ person.prenom}}</td>
                <td>{{ person.email}}</td>
                <td>{{ person.bio}}</td>
                <td>
                   <a href="{{ path('profile',{id:person.id}) }}"><button class="btn-search " type="button"> Go to</button>
                    </a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
                <div class="search-pagination p-4">{{ knp_pagination_render(users) }}</div>

            </div>
    </div>

{% endblock %}